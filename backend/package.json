{
	"name": "Spark - Fashion Search Engine",
	"version": "1.0.0",
	"description": "Spark - Fashion Search Engine - Backend",
	"author": "Salman khan",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"prepare": "husky install || true",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"start:dev": "bun src/index.ts --watch | pino-pretty",
		"start:prod": "bun dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix && biome format --write && biome check --write",
		"fix:imports": "biome check --write --unsafe .",
		"format": "biome format --write",
		"type-check": "tsc --noEmit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@bull-board/api": "^6.13.0",
		"@bull-board/express": "^6.13.0",
		"@bull-board/ui": "^6.15.0",
		"@qdrant/js-client-rest": "^1.16.2",
		"@types/jsonwebtoken": "^9.0.10",
		"aws-sdk": "^2.1692.0",
		"axios": "^1.12.2",
		"bullmq": "^5.61.0",
		"cors": "2.8.5",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"ioredis": "^5.8.1",
		"jsonwebtoken": "^9.0.2",
		"nanoid": "^5.1.6",
		"nodemailer": "^7.0.9",
		"openai": "^6.15.0",
		"pg": "^8.16.3",
		"pino": "9.9.0",
		"pino-http": "10.5.0",
		"pino-pretty": "^13.1.1",
		"postgres": "^3.4.7",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"pnpm": {
		"overrides": {
			"glob": "^11.1.0"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "^1.3.4",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/node": "^22.0.0",
		"@types/nodemailer": "^7.0.2",
		"@types/swagger-ui-express": "4.1.8",
		"husky": "9.1.7",
		"lint-staged": "^15.2.11"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write",
			"biome format --write"
		]
	}
}
